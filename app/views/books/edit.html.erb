<div class="container">
<div class="row">
<div class="col-md-6 col-md-offset-3">
<h2>Editing Book</h2>
<%= form_for @book do |f| %>
    <div class="form-group row">
      <%= f.label :title %><br>
      <%= f.text_field :title, autofocus: true ,class: "book_title col-xs-12"%>
    </div>
    <div class="form-group row">
      <%= f.label :opinion %><br />
      <%= f.text_area :opinion, autofocus: true ,class: "book_body col-xs-12"%>
    </div>
    <div class="actions row">
    <%= f.submit "Update book", class: "btn btn-primary col-xs-12" %>
    </div>
<% end %>
    <%= link_to "Show", book_path, class: "book_#{@book.id}" %>
     | 
    <%= link_to "Back", books_path, class: "back" %>
</div>
</div>
</div>